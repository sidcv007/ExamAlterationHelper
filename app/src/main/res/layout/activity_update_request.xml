<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update_request">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/update_details_clipart_24dp"
        android:id="@+id/update_timetable_clipart"
        android:layout_centerHorizontal="true"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_tt_card_req"
        android:layout_below="@+id/update_timetable_clipart"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datetext_req"
                android:text="Date           "
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datetext_req"
                android:text="Block          "
                android:textSize="20sp"
                android:id="@+id/blocktext_req"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room         "
                android:textSize="20sp"
                android:id="@+id/roomtext_req"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/blocktext_req"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time          "
                android:textSize="20sp"
                android:id="@+id/timetext_req"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/roomtext_req"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name         "
                android:textSize="20sp"
                android:id="@+id/nametext_req"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/timetext_req"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_edit_req"
                android:text=""
                android:layout_toRightOf="@+id/datetext_req"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/block_edit_req"
                android:layout_toRightOf="@+id/blocktext_req"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/room_edit_req"
                android:layout_toRightOf="@+id/roomtext_req"
                android:layout_below="@+id/blocktext_req"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_edit_req"
                android:layout_toRightOf="@+id/timetext_req"
                android:layout_below="@+id/roomtext_req"
                android:layout_marginTop="15dp"
                />
            <EditText
                android:hint="NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_edit_req"
                android:layout_toRightOf="@+id/nametext_req"
                android:layout_below="@+id/timetext_req"
                android:layout_marginTop="15dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:layout_below="@+id/name_edit_req"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:textColor="#ffffff"
                android:backgroundTint="#543939"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:onClick="update"
                android:id="@+id/update_tt_btn_req"
                android:layout_marginBottom="25dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>